<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ActivityTrackerApp.Pages.AddActivityPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ActivityTrackerApp.Views">
    <ContentPage.Content>
        <ScrollView Margin="{StaticResource defaultPageMargin}">
            <StackLayout>
                <views:DefaultEntryView Input="{Binding Name}" Placeholder="Type name here" />
                <views:DefaultEntryView Input="{Binding Distance}" Placeholder="Type distance here" />
                <views:DefaultEntryView Input="{Binding MovingTime}" Placeholder="Type moving time here" />
                <views:DefaultEntryView Input="{Binding ElapsedTime}" Placeholder="Type elapsed time here" />
                <views:DefaultEntryView Input="{Binding Type}" Placeholder="Type category here" />
                <views:DefaultEntryView Input="{Binding AverageSpeed}" Placeholder="Type average speed here" />
                <views:DefaultEntryView Input="{Binding MaxSpeed}" Placeholder="Type max speed here" />
                <Button Command="{Binding AddActivityCommand}" Text="Add activity" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>